rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - existing rules
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Settings collection - PUBLIC READ, AUTHENTICATED WRITE
    match /settings/{document=**} {
      // Allow PUBLIC read access (launcher needs this even when not logged in)
      allow read: if true;
      
      // Allow write only if user is authenticated
      allow write: if request.auth != null;
      
      // Alternative: Only allow specific admin emails to write
      // allow write: if request.auth != null && 
      //   request.auth.token.email in ['admin@example.com', 'your-admin@email.com'];
    }
    
    // Apps collection - PUBLIC READ, AUTHENTICATED WRITE
    match /apps/{appId} {
      // Allow PUBLIC read access (launcher needs this even when not logged in)
      allow read: if true;
      
      // Allow write only if user is authenticated
      allow write: if request.auth != null;
      
      // Alternative: Only allow specific admin emails to write
      // allow write: if request.auth != null && 
      //   request.auth.token.email in ['admin@example.com', 'your-admin@email.com'];
    }
  }
}
